#include <unistd.h>
#include <stdio.h> //remove

void	ft_rev_int_tab(int *tab, int size)
{
	int	i;
	int	temp;

	i = 0;
	while (i < (size / 2))
	{
		temp = tab[i];
		tab[i] = tab[size - 1 - i];
		tab[size - 1 - i] = temp;
		printf("this is tab: %d\n", tab[i]);
		i++;
	}
}

int main(void)
{
	int tab[] = {1, 2, 3, 4, 5};
	int size = sizeof(tab)/ sizeof(tab[0]);
	printf("this is size: %d\n", size);
	ft_rev_int_tab(tab, size);
	write(1, &tab, size);
	return (0);
}
